# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DATABASE=hr_encrypted
MONGODB_COLLECTION=employees

# Encryption Configuration
KEY_VAULT_DATABASE=encryption
KEY_VAULT_COLLECTION=__keyVault
LOCAL_MASTER_KEY_PATH=./local_master_key.txt

# Crypt Shared Library Path (adjust for your OS)
# macOS ARM: ./mongo_crypt_shared_v1-macos-arm64-enterprise-8.0.3/lib/mongo_crypt_v1.dylib
# macOS Intel: ./mongo_crypt_shared_v1-macos-x86_64-enterprise-8.0.3/lib/mongo_crypt_v1.dylib
# Linux: ./mongo_crypt_shared_v1-linux-x86_64-enterprise-8.0.3/lib/mongo_crypt_v1.so
CRYPT_SHARED_LIB_PATH=./mongo_crypt_shared_v1-macos-arm64-enterprise-8.0.3/lib/mongo_crypt_v1.dylib

# Server Configuration
SERVER_PORT=8080
GIN_MODE=debug

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# Database Seeding (for demo purposes)
SEED_DATABASE=true
SEED_COUNT=100

# Drop collections on startup (set to true to recreate collections each time)
DROP_COLLECTIONS=false
